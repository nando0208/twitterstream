# Uncomment the next line to define a global platform for your project
platform :ios, '11.2'
use_frameworks!

target 'twitterstream' do

    # Development Tools

    # Code lint to Swift
    pod 'SwiftLint'

    # Parse
    pod 'Unbox'

    # Twitter
    pod 'TwitterKit'

    # Autolayout
    pod 'Cartography'

    # Image downloader and cache
    pod 'AlamofireImage'
end

target 'twitterstreamTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Nimble-Snapshots'
    pod 'Quick'
    pod 'Nimble'
    pod 'Unbox'
end

target 'twitterstreamUITests' do
    inherit! :search_paths
    # Pods for testing
end
